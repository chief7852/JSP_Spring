<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="false" 
	default-init-method="init"
	default-destroy-method="destroy"
	>

<!-- 스키마 정보 : beans ,c(생성자주입 대체용), p -->
<!-- lazy-init 부르는 타임이 있으면 (주입받으면 실행한다)  -->
	<bean depends-on="daoOracle" id="daoMySql" class="kr.or.ddit.example.dao.ExampleDAO_MySql" />
	<!-- depends-on bean들과의 관계를 직접 제작가능  -->
	<bean id="daoOracle" class="kr.or.ddit.example.dao.ExampleDAO_Oracle"/>
	
	<bean id="service" class="kr.or.ddit.example.service.ExampleServiceImpl"
	c:dao-ref="daoMySql"
	p:dao-ref="daoOracle"
	>
	<!-- c:네임스페이스 생성자를 먼저사용하고 setter를 사용함 -->
<!-- 		<constructor-arg name="dao" ref="daoMySql" /> -->

		<!-- setter주입 () optional전략일때 사용-->
		<!-- <property name="dao" ref="daoMySql"></property> -->
	</bean>
		<bean id="service2" class="kr.or.ddit.example.service.ExampleServiceImpl" 
		scope="prototype"/><!-- prototype 특징 :주입될때까지 안만든다 ,매번주입할때마다 새로만드는것 -->
</beans>
