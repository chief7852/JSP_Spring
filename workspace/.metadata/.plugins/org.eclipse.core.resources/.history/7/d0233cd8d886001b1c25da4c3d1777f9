package kr.or.ddit.enumpkg;

public enum OSType{
	WIN("윈도우"), MAC("맥"), ANDROID("안드로이드"),IPHONE("아이폰"), OTHER("기타등등");
	OSType(String browserName){
		this.osName = browserName;
	}
	private String osName;
	public String getOSName(){
		return this.osName;
	}
	
	
	public static String getBrowserName(String agent) {
		OSType[] types =OSType.values();
		agent = agent.toUpperCase(); 
		OSType searched = OTHER;
		for(BrowserType2 tmp : types){
			if(agent.contains(tmp.name())){
				searched = tmp;
				break;
			}
		}
		String name = searched.getBrowserName();
		return name;
	}
}