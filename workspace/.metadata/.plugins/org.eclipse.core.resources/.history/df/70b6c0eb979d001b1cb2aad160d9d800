<title>Insert title here</title>
</head>
<body>
	<form method="get">
	
		<input type="url" name="importURL" placeholder="https://www.naver.com"/>
		<label><input type="checkbox" name="source" value="true"/>소스보기</label>
		<input type="submit" value="가져오기"/>
	</form>
<div>


<c:if test="${not empty param.importURL }" >
	<c:import url="${param.importURL }" var="url"/>
	<c:choose>
		<c:when test="${param.source eq true}">
			<c:out value="${url }" escapeXml="${false }"></c:out>
		</c:when>
		<c:otherwise>
			<c:out value="${url }"></c:out>
		</c:otherwise>
	
	</c:choose>
	
</c:if>

