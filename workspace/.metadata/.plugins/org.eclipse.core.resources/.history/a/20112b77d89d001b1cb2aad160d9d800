			<version>1.2</version>
		</dependency>
		
		<!-- ojdbc -->
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc6</artifactId>
			<version>12.1.0.2</version>
		</dependency>
		<!-- DB Connection -->
		<!-- https://mvnrepository.com/artifact/org.apache.commons/commons-dbcp2/2.8.0 -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-dbcp2</artifactId>
