					<warSourceDirectory>${basedir}/webapp</warSourceDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
	<!-- ojdbc사용하려면 유료라서 jahia 사이트에서 가져오기위해 하는 설정 -->
		<repository>
			<id>jahia</id>
