package kr.or.ddit;

import java.util.ArrayList;
import java.util.Collection;
import java.util.HashMap;
import java.util.Map;

import javax.servlet.http.HttpSession;

import kr.or.ddit.vo.MemberVO;

public class Listants {
	public static final Collection<Map<String,String>> CONNECTMEMBERS = new ArrayList<Map<String,String>>();
	public static final String CONKEY = "connect";
	
	public void sessionAdd(HttpSession session) {
MemberVO member = (MemberVO)session.getAttribute("authMember");
		
		if(member.getMem_id() !=null) {
			Map<String, String> memId = new HashMap<>();
			String key = Listants.CONKEY;
			memId.put(key, member.getMem_id());
			Listants.CONNECTMEMBERS.add(memId);
		}
	}
}
